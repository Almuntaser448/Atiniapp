<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_application"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/notifpic"
        android:layout_width="51dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_notification" />

    <ImageView
        android:id="@+id/watermilonpic"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/notifpic"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pastek_icon" />


    <Spinner
        android:id="@+id/spinnerCategoryFilter"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:entries="@array/category_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerLocation"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:layout_marginStart="299dp"
        android:layout_marginTop="82dp"
        android:entries="@array/location_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="103dp"
        android:layout_height="32dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="624dp"
        android:entries="@array/status_options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="388dp"
        android:layout_height="480dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="234dp"
        android:layout_height="49dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewWatermilon"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:layout_marginStart="288dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="689dp"
        android:background="@color/design_default_color_error"
        android:elevation="5dp"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNotif"
        android:layout_width="18dp"
        android:layout_height="17dp"
        android:layout_marginStart="357dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="698dp"
        android:background="@color/design_default_color_error"
        android:elevation="5dp"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
